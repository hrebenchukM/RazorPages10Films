<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GuestbookRazorPages</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GuestbookRazorPages.styles.css" asp-append-version="true" />
</head>
<body class="anime-bg">
    <div class="container py-4">
        <header class="d-flex justify-content-between align-items-center mb-5">
            <div class="d-flex align-items-center">
                <h1 class="logo">Guest Book</h1>
            </div>
            <div class="auth-buttons">
                @if (Context.Session.GetString("Login") == null && Context.Request.Cookies["login"] == null)
                {
                    <a class="btn btn-outline-primary me-2" asp-page="./Login">Login</a>
                    <a class="btn btn-primary" asp-page="./Register">Register</a>
                }
                else
                {
                    var firstName = Context.Session.GetString("FirstName") ?? Context.Request.Cookies["login"];
                    <span class="welcome-text me-3">Welcome, @firstName!</span>

                    <a class="btn btn-danger" asp-page="Logout">
                        <i class="fas fa-sign-out-alt me-1"></i>Logout
                    </a>
                }
            </div>
        </header>
    </div>

    <div class="container py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - GuestbookRazorPages - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>