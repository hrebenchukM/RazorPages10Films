@page
@model RazorPages10Films.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="container py-5">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.Film.Poster" class="img-fluid rounded-4 shadow-lg" alt="Movie Poster">
        </div>
        <div class="col-md-8">
            <h1 class="display-4 text-gradient mb-4">
                @Html.DisplayNameFor(model => model.Film.Name)
                </h1>
            <div class="d-flex gap-4 text-muted mb-4">
                <div class="movie-info">
                    <i class="fas fa-user me-2"></i>
                    <span>Maker:
                        @Html.DisplayFor(model => model.Film.Maker)
                        </span>
                </div>
                <div class="movie-info">
                    <i class="fas fa-film me-2"></i>
                    <span>Genre: 
                        @Html.DisplayFor(model => model.Film.Genre.Name)
                        </span>
                </div>
                <div class="movie-info">
                    <i class="fas fa-calendar me-2"></i>
                    <span>Year:
                        @Html.DisplayFor(model => model.Film.Year)
                        </span>
                </div>
            </div>
            <div class="mb-4">
                <h3 class="h4 text-gradient mb-3">Description</h3>
                <p class="text-muted">
                    @Html.DisplayFor(model => model.Film.Description)
                    </p>
            </div>
            <div class="d-flex gap-3">
                <a asp-page="./Edit" asp-route-id="@Model.Film.Id" class="btn btn-primary">
                    <i class="fas fa-edit me-2"></i>Edit
                </a>
                <a asp-page="./Delete" asp-route-id="@Model.Film.Id" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-2"></i>Delete
                </a>
            </div>
        </div>
    </div>
    <div class="mt-4">
        <a asp-page="./Index" class="btn btn-link text-primary text-decoration-none hover-shadow rounded-3">Back to List</a>
    </div>
</div>


