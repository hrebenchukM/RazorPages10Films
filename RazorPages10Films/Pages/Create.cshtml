@page
@model RazorPages10Films.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>
@*Благодаря установке атрибута формы enctype="multipart/form-data" 
браузер будет знать, что вместе с формой надо передать файл.*@

<h1 class="display-4 text-gradient text-center mb-4">Create</h1>
<h4 class="text-center mb-4">Film</h4>
<hr />


<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body p-4">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <div class="mb-4">
                            <label asp-for="Film.Name" class="form-label text-muted">Title</label>
                            <input asp-for="Film.Name" class="form-control rounded-3" />
                            <span asp-validation-for="Film.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Film.Maker" class="form-label text-muted">Director</label>
                            <input asp-for="Film.Maker" class="form-control rounded-3" />
                            <span asp-validation-for="Film.Maker" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Film.Year" class="form-label text-muted">Release Year</label>
                            <input asp-for="Film.Year" class="form-control rounded-3" />
                            <span asp-validation-for="Film.Year" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label text-muted">Movie Poster</label>
                            <input type="file" name="uploadedFile" class="form-control rounded-3" />
                        </div>

                        <div class="mb-4">
                            <label asp-for="Film.Description" class="form-label text-muted">Description</label>
                            <textarea asp-for="Film.Description" class="form-control rounded-3" rows="4"></textarea>
                            <span asp-validation-for="Film.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Film.GenreId" class="form-label text-muted">Genre</label>
                            <select asp-for="Film.GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary rounded-3">
                                <i class="fas fa-save me-2"></i>Save Movie
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="mt-4 text-center">
            <a asp-page="Index" class="btn btn-link text-primary text-decoration-none hover-shadow rounded-3">
                Back to List
            </a>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
