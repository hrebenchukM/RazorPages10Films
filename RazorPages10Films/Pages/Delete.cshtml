@page
@model RazorPages10Films.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-body p-5">
                    <div class="text-warning mb-4 display-1">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <h2 class="text-gradient mb-4">Delete Movie</h2>
                    <p class="text-muted mb-4">Are you sure you want to delete this movie?</p>
                    <p class="h4 text-gradient mb-4">@Model.Film.Name</p>
                    <div class="d-flex justify-content-center gap-3">
                        <form method="post">
                            <input type="hidden" asp-for="Film.Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-2"></i> Delete
                            </button>
                        </form>
                        <a asp-page="./Index" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
